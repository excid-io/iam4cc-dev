[
  {
    "id": "allow-anonymous-with-header-mutator",
    "upstream": {
      "url": "http://192.168.1.2:6004"
    },
    "match": {
      "url": "http://192.168.1.2:6003/item/<[0-9]+>",
      "methods": ["GET"]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "remote",
      "config": {
        "remote": "http://pdp:6002/api/authorizer/authorize",
        "headers": {
          "X-ID": "{{ printIndex .MatchContext.RegexpCaptureGroups 0 }}"
        }
      }
    },
    "mutators": [{ "handler": "noop" }]
  }
]
